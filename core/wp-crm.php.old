function wp_crm_gallery_filter ($text) {
	if (($pos = strpos($text, '[gallery-')) === FALSE) return $text;
	$gallery = (int) substr($text, $pos+9, strpos($text, ']', $pos) - $pos - 9);
	$tag = '[gallery-'.$gallery.']';

	$gallery = new WP_CRM_Gallery ($gallery);
	$out = $gallery->out ();
	
	return str_replace ($tag, $out, $text);
	}

